<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" android:background="#799EE3">


    <TextView
            android:layout_width="675dp"
            android:layout_height="61dp"
            android:text="@string/you_must_answer_5_world_history_question_to_start_press_the_start_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/textQuestion"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:textColor="#041A43"
            android:fontFamily="sans-serif-condensed-medium" android:textSize="21sp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button2"/>


    <Button
            android:text="@string/start"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#799EE3"
            android:layout_width="172dp"
            android:layout_height="58dp" android:id="@+id/button"
            tools:ignore="MissingConstraints" android:backgroundTint="#03132C"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.362" app:layout_constraintHorizontal_bias="0.499"/>
    <TextView
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:text="@string/score"
            android:id="@+id/scoreView"
            android:textColor="#03132C"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            tools:ignore="MissingConstraints,UnknownId"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"
            app:layout_constraintEnd_toStartOf="@+id/scoreText" android:layout_marginEnd="1dp"
    />

    <Button
            android:text="Button"
            android:layout_width="591dp"
            android:textStyle="bold"
            android:backgroundTint="#010814"
            android:textSize="10dp"
            android:textColor="#ACC3ED"
            android:visibility="gone"
            android:layout_height="0dp"
            android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/textQuestion"
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toTopOf="@+id/button3"/>
    <Button
            android:text="Button"
            android:layout_width="591dp"
            android:textStyle="bold"
            android:backgroundTint="#010814"
            android:textSize="10dp"
            android:textColor="#ACC3ED"
            android:layout_height="0dp"
            android:id="@+id/button3"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/button4"/>
    <Button
            android:text="Button"
            android:layout_width="591dp"
            android:textStyle="bold"
            android:backgroundTint="#010814"
            android:textSize="10dp"
            android:visibility="gone"
            android:textColor="#ACC3ED"
            android:layout_height="0dp"
            android:id="@+id/button4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" android:layout_marginBottom="60dp"
            app:layout_constraintHorizontal_bias="0.51"/>


</androidx.constraintlayout.widget.ConstraintLayout>