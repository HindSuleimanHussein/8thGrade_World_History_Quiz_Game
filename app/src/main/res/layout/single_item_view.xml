<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical"
                                                   tools:context=".MainActivity3" android:background="#799EE3">

    <ImageView
            android:layout_width="122dp"
            android:layout_height="154dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/firstImageView"
            tools:layout_editor_absoluteX="1dp" tools:layout_editor_absoluteY="0dp" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="TextView"
            android:layout_width="530dp"
            android:textColor="#03132C"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_height="219dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/firstTextView"
            app:layout_constraintBottom_toBottomOf="@+id/firstImageView"
            app:layout_constraintTop_toTopOf="@+id/firstImageView"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/firstImageView" app:layout_constraintHorizontal_bias="0.111"
            android:layout_marginTop="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>